
<% @movies.each do |movie| %>
<div class="movies_display">
  <%= image_tag(movie.image.thumb.url) %>
  <h4><%= link_to movie.title, movie_path(movie) %> | <%= movie.review_average %></h4>
  <h5><%= formatted_date(movie.release_date) %></h5>
  <h6>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h6>
  <p><%= truncate(movie.description, length: 90) %></p>
</div>
<% end %>
